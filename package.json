{
  "name": "node-express-rest-api",
  "description": "A template to quickly generate a Node.js REST-API, in TypeScript.",
  "version": "0.1.0",
  "main": "dist/index.js",
  "author": "TotomInc <cazade.thomas@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TotomInc/node-express-rest-api"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc -p tsconfig.production.json",
    "dev": "nodemon",
    "lint": "eslint -c .eslintrc.js --ext \".js,.ts\" .",
    "lint:fix": "eslint --fix -c .eslintrc.js --ext \".js,.ts\" .",
    "release": "yarn build && node ./build/sentry-release --environment production",
    "release:staging": "yarn build && node ./build/sentry-release --environment staging",
    "serve-coverage": "http-server ./coverage",
    "start": "cross-env NODE_ENV=production node ./dist/index.js",
    "test": "jest --verbose --silent",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@sentry/cli": "^1.52.0",
    "@sentry/integrations": "^5.15.0",
    "@sentry/node": "^5.15.0",
    "await-to-js": "^2.1.1",
    "body-parser": "^1.19.0",
    "celebrate": "^12.0.1",
    "chalk": "^3.0.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongoose": "^5.9.6",
    "morgan": "^1.10.0",
    "typescript": "^3.8.3",
    "uuid": "^7.0.2"
  },
  "devDependencies": {
    "@totominc/eslint-config-typescript": "0.1.5",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/express-jwt": "^0.0.42",
    "@types/hapi__joi": "^16.0.12",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^25.1.4",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/module-alias": "^2.0.0",
    "@types/mongoose": "^5.7.7",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.9.4",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.2.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.8.1",
    "tsconfig-paths": "^3.9.0"
  }
}
