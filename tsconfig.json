{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "types": ["node", "jest"],
    "lib": ["esnext", "DOM"],
    "paths": {
      "*": ["node_modules/*", "./types/*"],
      "@config/*": ["./config/*"],
      "@interfaces/*": ["./interfaces/*"],
      "@server/*": ["./server/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.js"],
  "exclude": ["node_modules", "./dist"]
}
